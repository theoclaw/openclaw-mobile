<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
     https://material.io/develop/android/theming/dark
    -->

    <!-- TermuxActivity DayNight NoActionBar theme. -->
    <!-- See https://developer.android.com/training/material/theme.html for how to customize the Material theme. -->
    <!-- NOTE: Cannot use "Light." since it hides the terminal scrollbar on the default black background. -->
    <style name="Theme.TermuxActivity.DayNight.NoActionBar" parent="Theme.TermuxApp.DayNight.NoActionBar">
        <!-- BotDrop primary brand color. -->
        <item name="colorPrimary">@color/botdrop_background</item>
        <item name="colorPrimaryDark">#111111</item>
        <item name="colorPrimaryVariant">@color/botdrop_background</item>
        <item name="colorAccent">@color/botdrop_accent</item>

        <item name="android:windowBackground">@color/botdrop_background</item>
        <item name="android:textColor">@color/botdrop_on_background</item>
        <item name="android:textColorPrimary">@color/botdrop_on_background</item>
        <item name="android:textColorSecondary">@color/botdrop_secondary_text</item>
        <item name="android:statusBarColor">#111111</item>
        <item name="android:navigationBarColor">#111111</item>

        <!-- Avoid action mode toolbar pushing down terminal content when
             selecting text on pre-6.0 (non-floating toolbar). -->
        <item name="android:windowActionModeOverlay">true</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- https://developer.android.com/training/tv/start/start.html#transition-color -->
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>

        <!-- Left drawer. -->
        <item name="buttonBarButtonStyle">@style/TermuxActivity.Drawer.ButtonBarStyle.Dark</item>
        <item name="termuxActivityDrawerBackground">@color/botdrop_surface</item>
        <item name="termuxActivityDrawerImageTint">@color/botdrop_accent</item>

        <!-- Extra keys colors. -->
        <item name="extraKeysButtonTextColor">@color/botdrop_on_background</item>
        <item name="extraKeysButtonActiveTextColor">@color/botdrop_accent</item>
        <item name="extraKeysButtonBackgroundColor">@color/botdrop_surface</item>
        <item name="extraKeysButtonActiveBackgroundColor">@color/botdrop_accent_dark</item>
    </style>

</resources>
