<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/botdrop_card_bg"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="8dp">

    <!-- Radio button -->
    <RadioButton
        android:id="@+id/provider_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp" />

    <!-- Provider info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Provider name with recommended badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/provider_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/botdrop_on_background"
                android:text="Provider Name" />

            <TextView
                android:id="@+id/provider_recommended_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â­"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Provider description -->
        <TextView
            android:id="@+id/provider_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/botdrop_secondary_text"
            android:text="Auth method hint" />

    </LinearLayout>

</LinearLayout>
