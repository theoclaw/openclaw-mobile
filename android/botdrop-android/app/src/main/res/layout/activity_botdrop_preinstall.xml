<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/botdrop_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="28dp">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/botdrop_logo"
            android:contentDescription="Nana"
            android:layout_marginBottom="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在准备…"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/botdrop_on_background"
            android:layout_marginBottom="10dp" />

        <ProgressBar
            android:id="@+id/preinstall_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/botdrop_accent" />

        <TextView
            android:id="@+id/preinstall_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查安装…"
            android:textSize="14sp"
            android:textColor="@color/botdrop_secondary_text"
            android:layout_marginTop="16dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/preinstall_error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textColor="@color/botdrop_on_background"
            android:textSize="13sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/preinstall_retry_button"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:text="重试"
            android:textSize="16sp"
            android:background="@drawable/botdrop_button_bg"
            android:textColor="#1A1A1A"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/preinstall_manual_setup_button"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:text="手动设置（高级）"
            android:textSize="16sp"
            android:background="@drawable/botdrop_button_outline_bg"
            android:textColor="@color/botdrop_accent"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>

