<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/clawphones_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/chat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clawphones_background"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@color/clawphones_on_background"
        app:subtitleTextColor="@color/clawphones_secondary_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messages_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:overScrollMode="never" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"
        android:background="@color/clawphones_surface">

        <EditText
            android:id="@+id/message_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="44dp"
            android:hint="输入消息…"
            android:textColor="@color/clawphones_on_background"
            android:textColorHint="@color/clawphones_secondary_text"
            android:background="@drawable/clawphones_input_bg"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:maxLines="5"
            android:inputType="textMultiLine|textCapSentences"
            android:imeOptions="actionSend"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/message_send"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="发送"
            android:background="@drawable/clawphones_button_outline_bg"
            android:tint="@color/clawphones_accent"
            android:layout_marginStart="8dp"
            android:scaleType="centerInside"
            android:padding="10dp" />
    </LinearLayout>

</LinearLayout>
